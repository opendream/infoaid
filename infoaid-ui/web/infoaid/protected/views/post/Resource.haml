.message-content.message-resource(ng-clock='')
	.message-poster-avatar
		%a(href="#{Yii::app()->baseUrl.'/user/profile/'}{{post.userId}}")
			%img(src="#{Yii::app()->baseUrl}{{post.userPicSmall}}")
	.message-details
		.message-card
			.message-poster-name
				%a(href="#{Yii::app()->baseUrl.'/user/profile/'}{{post.userId}}")
					{{post.createdBy}}
				%span.description-phrase
					pledges to donate 
					%span.item-quantity
						{{post.quantity}}
					units of
					%span.item-name
						{{post.item.name}}
			.message-body
				.item-icon-wrapper
					%i(class="item-icon item-icon-{{post.item.name}}")
				.item-quantity
					%span.quantity-sign +
					{{post.quantity}}
				.clear
		.meta
			%time.timeago(datetime="{{post.dateCreated}}")
				{{post.dateCreated}}
			=" - "
			%a(ng-click="deletePost(post)" type="button" ng-show="post.canDelete")
				delete

